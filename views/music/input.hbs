
<div class="container">
    <form action="/createList" method="POST">

            <div id="hidden" style="display: none">
                <input type="text" id="id" value="{{user.id}}" style="display: none">
                <input id="token" type="text" value="{{user.accessToken}}" style="display: none">
                <input id="token" type="text" value="{{user.photoUrl}}" style="display: none">
                <input id="token" type="text" value="{{user.displayName}}" style="display: none">
            </div>
            <div class="container">
                <div class="input-field col s8">
                    <h5 class="title-white">Type an artist to start creating your playlist</h5>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix"></i>
                            <input type="text" id="autocomplete-input" name="search2" class="autocomplete">
                            <label for="autocomplete-input">Artist</label>
                        </div>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Go!
                        <i class="material-icons right"></i>
                    </button>
                </div>
            </div>

    </form>
</div>

<script src="/javascripts/inputList.js"></script>
<script src="/javascripts/carlosspotify.js"></script>
