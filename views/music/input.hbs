
<div class="container">
    <form action="/createList" method="POST">

            <div id="hidden"  style="display: none">
                <input type="text" id="idBack" value="{{user.id}}" style="display: none">
                <input id="tokenBack" type="text" value="{{user.accessToken}}" style="display: none">
                <input id="photoUrlBack" type="text" value="{{user.photoUrl}}" style="display: none">
                <input id="displayNameBack" type="text" value="{{user.displayName}}" style="display: none" >
            </div>
            <div class="container drop600">
                <div class="input-field col s8">
                    <h5 class="title-white">Type an artist or a band to start creating your playlist</h5>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix"></i>
                            <input type="text" id="autocomplete-input" name="search1" class="autocomplete1 validate" required="" aria-required="true">
                            <label for="autocomplete-input">Artist</label>
                            <span class="helper-text" data-error="wrong" data-success="right"></span>
                        </div>
                    </div>
                    <h5 class="title-white">Type a song</h5>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix"></i>
                            <input type="text" id="autocomplete-input" name="search2" class="autocomplete2">
                            <label for="autocomplete-input">Song</label>
                        </div>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Go!
                        <i class="material-icons right"></i>
                    </button>
                </div>
            </div>
    </form>
</div>
{{#if error}}
    <div class="card-panel red lighten-1">{{error}}</div>
{{/if}}
<script src="/javascripts/inputList.js"></script>
<script src="/javascripts/carlosspotify.js"></script>